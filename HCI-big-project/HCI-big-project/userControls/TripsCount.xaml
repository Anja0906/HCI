<UserControl x:Class="HCI_big_project.userControls.TripsCount"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HCI_big_project.userControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Loaded="Card_OnLoaded"
             MouseEnter="TripsOverviewCard_OnMouseEnter"
             MouseLeave="TripsOverviewCard_OnMouseLeave">
    <Border x:Name="Border" Background="#D9D9D9" Padding="10" Margin="10" 
            CornerRadius="15" Width="230" Height="Auto"
            ToolTip="Broj putovanja za izabrane vrednosti.">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" x:Name="NameLabel" TextWrapping="Wrap" Foreground="#4EBE60" FontSize="18" VerticalAlignment="Center" >Broj putovanja:</TextBlock>
            <TextBlock Grid.Row="1" x:Name="DescriptionLabel" TextWrapping="Wrap" Foreground="#4EBE60" FontSize="18" VerticalAlignment="Center"></TextBlock>
        </Grid>
    </Border>
</UserControl>
