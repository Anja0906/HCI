<Window x:Class="HCI_big_project.view.RestaurantDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        xmlns:local="clr-namespace:HCI_big_project.userControls"
        mc:Ignorable="d"
        Title="RestaurantDetailsWindow" Height="430" Width="750"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        MinWidth="400"
        Loaded="Window_OnLoaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="70*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <local:SideMenu x:Name="Menu" />
        </Grid>

        <Grid Grid.Column="1" Background="#F2F2F2" MinWidth="200">
            <Grid.RowDefinitions>
                <RowDefinition Height="25*" />
                <RowDefinition Height="50*" />
                <RowDefinition Height="15*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="#F2F2F2" MinWidth="200">
                <gmap:GMapControl x:Name="gmap" Loaded="map_load"
                                  MouseDoubleClick="MapControl_MouseDoubleClick"
                                  Margin="5" />
            </Grid>
            <Border Grid.Row="1" Style="{StaticResource DetailsBorder}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*" />
                            <ColumnDefinition Width="50*" />
                        </Grid.ColumnDefinitions>
                        <Border ToolTip="Opste informacije" Grid.Column="1" Style="{StaticResource BorderWithShadowStyle}">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <Label Style="{StaticResource DetailsLabel}" Content="NAZIV: " />
                                    <Label Style="{StaticResource DetailsLabel}" ToolTip="Naziv restorana" Content="{Binding Restaurant.Name}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Style="{StaticResource DetailsLabel}" Content="ADRESA: " />
                                    <Label Style="{StaticResource DetailsLabel}"
                                           Content="{Binding Restaurant.Address.Address}" 
                                           ToolTip="Adresa restorana"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Style="{StaticResource DetailsLabel}" Content="LINK: " />
                                    <TextBlock VerticalAlignment="Center" ToolTip="Link do stranice restorana">
                                        <Hyperlink NavigateUri="{Binding Restaurant.Link}"
                                                   RequestNavigate="Hyperlink_RequestNavigate">
                                            STRANICA HOTELA
                                        </Hyperlink>
                                    </TextBlock>
                                </StackPanel>
                                <Label Style="{StaticResource DetailsLabel}"
                                       HorizontalAlignment="Left" Content="OPIS: " />
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                                           Text="{Binding Restaurant.Caption}"
                                           HorizontalAlignment="Left" ToolTip="Opis restorana">
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <StackPanel Grid.Column="0" ToolTip="Slika restorana">
                            <ContentControl Content="{Binding SelectedImage}" Padding="20">
                                <ContentControl.ContentTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding}" />
                                    </DataTemplate>
                                </ContentControl.ContentTemplate>
                            </ContentControl>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

            </Border>

            <Grid Grid.Row="2" ToolTip="Slike restorana">
                <ScrollViewer Height="Auto" VerticalScrollBarVisibility="Auto">
                    <ListBox ItemsSource="{Binding Images}"
                             SelectedItem="{Binding SelectedImage}"
                             ItemContainerStyle="{StaticResource ImageItem}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Height="Auto" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding}" Width="50" Height="Auto" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.Template>
                            <ControlTemplate>
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" Height="Auto">
                                    <ItemsPresenter Height="Auto" />
                                </ScrollViewer>
                            </ControlTemplate>
                        </ListBox.Template>
                    </ListBox>
                </ScrollViewer>
            </Grid>
            <Grid Grid.Row="3" x:Name="Grid3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Style="{StaticResource CustomButtonStyle}" 
                        Content="UREDI" Click="Update_OnClick"
                        MaxHeight="35"
                        ToolTip="Klikom na ovo dugme mozete izmeniti informacije o restoranu"/>
                <Button Grid.Column="3" Style="{StaticResource CustomButtonStyle}" 
                        Content="OBRIÅ I" Click="Delete_OnClick"
                        MaxHeight="35"
                        ToolTip="Klikom na ovo dugme mozete obrisati restoran"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
